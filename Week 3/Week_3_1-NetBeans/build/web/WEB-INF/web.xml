<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HelloWorldServlet3</servlet-name>
        <servlet-class>week31.HelloWorldServlet3</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HelloWorldServlet4</servlet-name>
        <servlet-class>week31.HelloWorldServlet4</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormPostGetServlet</servlet-name>
        <servlet-class>week31.FormPostGetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormInputsServlet</servlet-name>
        <servlet-class>week31.FormInputsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadWriteFileServlet</servlet-name>
        <servlet-class>week31.ReadWriteFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadWriteFile2Servlet</servlet-name>
        <servlet-class>week31.ReadWriteFile2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorldServlet3</servlet-name>
        <url-pattern>/HelloWorldServlet3</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelloWorldServlet4</servlet-name>
        <url-pattern>/HelloWorldServlet4</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormPostGetServlet</servlet-name>
        <url-pattern>/FormPostGetServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormInputsServlet</servlet-name>
        <url-pattern>/FormInputsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadWriteFileServlet</servlet-name>
        <url-pattern>/ReadWriteFileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadWriteFile2Servlet</servlet-name>
        <url-pattern>/ReadWriteFile2Servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
